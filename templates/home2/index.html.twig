{% extends 'base.html.twig' %}

{% block body %}
    <div class = "jumbotron">
        <br> ACCESS SHOP STORE:</br>
        <br> ACCESS LOCATION / AGENCE DE VENTES & LOCATIONS D'APPARTEMENTS EN ACCEESSIBILITE</br>
    </div>
    
 
     <div class = "container m-4">
     
          <div class = "row">
               {% for article in articles%}
                    <div class = "col-md-4">
                         <article>
                              <h5>{{ article.title}}</h5>
                         <div class = "metadata"> 
                                   Ecrit le : {{ article.createdAt | date('d/m/Y') }} 
                                        <br> Categorie:  {{ article.categorie.titre }} </br>
                              </div>
                              <div class = "content">
                                   <img src="https://via.placeholder.com/300x200" alt="">
                                   {{ article.content }}
                                   <a href="{{path('article.show', {'id': article.id})}}" class="btn btn-primary"> Lire la suite </a>      
                                   <p> </p>
                              </div>          
                         </article> 
                    </div> 
               {% endfor %}         
          </div>
          
          <div class="pagination">
                         {{ knp_pagination_render(articles) }}
          </div>
     </div>
{% endblock %}