{% extends 'base.html.twig' %}

{% block title %}Liste des Biens!{% endblock %}

{% block body %}

<div class = "jumbotron">
</div>

       
<div class="container">
<article>
            <h2> {{article.title}}</h2>
            <div class = "metadata"> 
                    Ecrit le : {{ article.createdAt | date('d/m/Y') }} 

            </div>

             <div class = "content">
                <img src="https://via.placeholder.com/300x200" alt="">
                                   <p>Qu'est-ce que le Lorem Ipsum?</p>
            {{article.content}}        
            
            </div>      
                
       </article>      

        <section id="commentaires">
        <hr size="4" color="blue">
            <h4>{{article.comments | length}} Les commentaires !!!!!</h4>
        	{% for comment in article.comments %}
        		<div class="comment">
        			<div class="row">
        				<div class="col3">
        				    {{ comment.auteur }} (<small> {{ comment.createdAt | date('d/m/Y ï¿½ H:i') }}</small>)
        				</div>
        				<div class="col">
        				    {{ comment.contenu |raw }}
            			</div>
            		</div>
        		</div>
            {% endfor %}
        </section>
</div>

{% endblock %}